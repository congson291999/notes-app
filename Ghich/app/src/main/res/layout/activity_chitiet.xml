<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:text="Thông Tin Chi Tiết"
        android:textColor="#E91E63"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTieuDe"
            android:layout_width="67dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Tiêu đề:"
            android:textColor="#4CAF50"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTieuDe"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Tiêu đề"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNoidung"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Nội dung:"
            android:textColor="#4CAF50"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextNoiDung"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Nội dung"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewThoiGian"
            android:layout_width="75dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Thoi gian chỉnh sửa:"
            android:textColor="#4CAF50"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewThoiGianChinhSua"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Thời gian"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTag"
            android:layout_width="67dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Tag:"
            android:textColor="#4CAF50"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTag"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Tag"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:text="Sửa" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xóa" />
    </LinearLayout>

</LinearLayout>